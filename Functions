//PASSING ARRAY THROUGH FUNCTIONS.
#include<stdio.h>
int fun(int array[])
{
    int i;
    for( i=0;i<4;i++)
    {
        printf("the value at %d is %d\n",i,array[i]);
    }
}

int main()
{
   int arr[]={10,20,30,40};
   fun(arr);

}








//array pasing through funtions.
#include<stdio.h>
int fun(int array[])
{
    int i;
    for( i=0;i<4;i++)
    {
        printf("the value at %d is %d\n",i,array[i]);
    }
}

int main()
{
   int arr[5],i;
   printf("enter the numbers= ");
   for(i=0;i<4;i++)
   {
      scanf("%d",&arr[i]); 
     
   }
    fun(arr);
  
   

}















