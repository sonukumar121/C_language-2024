 //sum of array elements using recursion.
 int  arrsum(int [],int,int);//fn declare with only datatype.
 void  main()
 {
     int n,i,a[5],Sum;
     printf("enter the size of array= ");
     scanf("%d",&n);
     printf("enter the elements= ");
     for(i=1;i<=5;i++)
     {
       scanf("%d",&a[i]);  
     }
     Sum=arrsum(a,1,n);
     printf("sum is= %d",Sum);
     
 }

int arrsum(int a[],int i,int n)
{
  int sum=0;
  if(i<n)
  {
    sum=sum+a[i];  
  }
  return arrsum(a,i+1,n);
  
}
































  
  
  
  
  
  


 


































