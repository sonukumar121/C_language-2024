//struct str-->user_defined_datatype.
struct str 
{
   int a;
   char b;
   float c;
}
int main()
{
struct str s;
printf("%d,%c,%f",s.int,s.char,s.float);

}

//


#include<stdio.h>
//structure with array.
struct student 
{
  
  char name[30];
  int roll_no;
  float percentage;	
};
int main()
{
	int i;
	struct student s[5];
	for(i=0;i<5;i++)
	{
	
	printf("enter the student name= ");
	scanf("%s",&s[i].name);
	printf("\nenter the roll_no= ");
	scanf("%d",&s[i].roll_no);
	printf("enter the percentage marks= ");
	scanf("%f",&s[i].percentage);
}
for(i=0;i<5;i++)
{

	
		printf("%s",s[i].name);
		printf("%d",s[i].roll_no);
		printf("%f",s[i].percentage);

}

}










#include<stdio.h>
//structure with pointers.
struct student 
{
  
  char name[30];
  int roll_no;
  float percentage;	
};
int main()
{
	struct student s;
	struct student *ptr=&s;
	printf("enter the name of student= ");
	scanf("%s",&*ptr->name);
	printf("%s",ptr->name);
}
