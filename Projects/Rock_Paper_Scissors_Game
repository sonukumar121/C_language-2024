//create,Game of rock,paper,scissors.
#include<stdio.h>
int main()
{
    int player1,player2,h;
     printf("For example 1>for rock=> press enter '1'\n 2>for paper=> press enter '2'\n 3>for scissors=> press enter '3'\n");
    while(1)
    {
        int choice;
          printf("enter your choice= ");
          scanf("%d",&choice);
      switch(choice) 
      
      {
                
          case 1: printf("you choose->Rock\n");
                  printf("computer choose paper\n");
                  printf("you lost try again\n");
                  break; 


          case 2:printf("you choose->paper  \n");
                 printf("computer choose scissors\n");
                 printf("you lost try again\n");
                 break;


          case 3:printf("you choose->scissors\n");
                 printf("computer choose paper\n");
                 printf("you win\n");
                 break;
                 
          default:printf("invalid choice");
                 
                
         
        }          
      }
    }
    
 
    
    
    
    
    
    
    
    
    
    
    
    
    
    


    
    
    
    
    
    
    
    
    
    
    
    

