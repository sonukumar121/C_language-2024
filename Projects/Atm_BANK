#include<Stdio.h>
int balance=5000,n,pin,x,amount;
int atm();
int main()
{
	char str[20];
	
	printf("1>Sbi bank\n2>Axis Bank\n3>ICICI Bank\n4>Canara Bank\n");
	printf("please! choose your bank option in which your account is hold= ");
