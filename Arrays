    // Merge Sorting.

 int main()
    {
      int a[8],i,j,n,c,c1,c2;
      printf("enter the elements= ");
        for(i=0;i<8;i++)
        {
      scanf("%d",&a[i]);//36,15,11,12,30,45,50,20.
        }
        for(i=0;i<;i++)
        {
            for(j=0;j<=i;j++)
            {
              if(a[2*i]>a[2*i+1])
              {
                  c=a[2*i];
                  a[2*i]=a[2*i+1];
                  a[2*i+1]=c;
              }
            }
        }


                for(j=0;j<=1;j++)
